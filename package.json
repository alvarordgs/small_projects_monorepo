{
  "name": "small_projects_monorepo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev-yt-summarizer": "turbo run yt-summarizer --filter=@repo/frontend --filter=@repo/backend --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "turbo": "^2.5.4",
    "typescript": "5.8.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
